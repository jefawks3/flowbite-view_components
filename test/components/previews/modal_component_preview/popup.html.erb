<%= render FoxTail::ModalComponent.new do |m| %>
  <% m.with_trigger do |trigger| %>
    <%= render FoxTail::ButtonComponent.new trigger.html_attributes do %>
      Open Modal
    <% end %>
  <% end %>

  <%= render FoxTail::SurfaceComponent.new(border: false, class: "p-6 text-center") do %>
    <%= render m.close_icon_button_component class: "absolute top-2.5 right-2.5" %>
    <%= render FoxTail::IconComponent.new "exclamation-circle", variant: :outline, class: "mx-auto mb-4 w-12 h-12" %>
    <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">
      Are you sure you want to delete this product?
    </h3>
    <div class="flex items-center justify-center gap-4">
      <%= render FoxTail::ButtonComponent.new(color: :danger, size: :lg).with_content("Yes, I'm Sure") %>
      <%= render m.close_button_component(color: :neutral, variant: :outline, size: :lg).with_content("No, cancel") %>
    </div>
  <% end %>
<% end %>
