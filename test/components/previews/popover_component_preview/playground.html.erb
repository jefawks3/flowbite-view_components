<div class="w-full my-40 flex items-center justify-center">
  <%= render(FoxTail::PopoverComponent.new(
    placement: placement,
    arrow: arrow,
    trigger_type: trigger_type,
    delay: delay
  )) do |c| %>
    <% if header %>
      <% c.with_header do %>
        Popover title
      <% end %>
    <% end %>

    <% c.with_trigger do |trigger| %>
      <%= render FoxTail::ButtonComponent.new(trigger.html_attributes) do %>
        <%= trigger_type == :hover ? "Hover over me" : "Click me" %>
      <% end %>
    <% end %>

    And here's some amazing content. It's very engaging. Right?
  <% end %>
</div>


