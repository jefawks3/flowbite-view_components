<%= render(FoxTail::PopoverComponent.new(trigger_type: trigger_type)) do |c| %>
  <% c.with_trigger do |trigger| %>
    <%= render FoxTail::ButtonComponent.new(trigger.html_attributes) do %>
      <% if trigger_type == :hover %>
        Hover over me
      <% else %>
        Click on me
      <% end %>
    <% end %>
  <% end %>
  <% c.with_header do %>
    Popover title
  <% end %>

  And here's some amazing content. It's very engaging. Right?
<% end %>
