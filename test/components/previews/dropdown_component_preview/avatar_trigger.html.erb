<%= render(FoxTail::DropdownComponent.new(placement: "bottom-start")) do |c| %>
  <% c.with_trigger do |trigger| %>
    <%= content_tag :button, trigger.html_attributes.merge(class: "flex mx-3 text-sm bg-gray-800 rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600") do %>
      <%= render FoxTail::AvatarComponent.new(src: "users/thomas-lean.png", rounded: true) %>
    <% end %>
  <% end %>
  <%
    c.with_menu do |menu|
      menu.with_item.with_content "Dashboard"
      menu.with_item.with_content "Settings"
      menu.with_item.with_content "Earnings"
      menu.with_item.with_content "Sign Out"
    end
  %>
<% end %>
